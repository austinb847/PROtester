<div class="container">
  <h1 class="business-header"><%= @business['name'] %></h1>
  <ul class="no-bullet">
    <li>Address: <%= @business['address'] %></li>
    <li>Website: <a href= "<%= @business['link'] %>"><%= @business['link'] %></a></li>
    <li>Category: <%= @business['category'] %></li>
  </ul>
  <% if @business['address'] != 'unavailable' %>
  <div class="mapsApi">
    <iframe
      width="75%"
      height="300"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/search?key=<%=ENV['API_KEY']%>&q=<%= @business['address'] %>" allowfullscreen>
    </iframe>
  </div>
  <% end %>
</div>