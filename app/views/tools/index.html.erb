         <div class="item">
          <img src="protest5.jpg" class="image" id="pro_image5">
        </div>

         <div class="item">
          <img src="protest6.jpg" class="image" id="pro_image6">
        </div>

         <div class="item">
          <img src="protest7.jpg" class="image" id="pro_image7">
        </div>
      </div>

      <!-- Left and right controls -->
